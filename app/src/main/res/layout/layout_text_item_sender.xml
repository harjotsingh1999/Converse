<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_sender_message_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="100dp"
    android:layout_marginEnd="20dp"
    android:layout_gravity="end"
    android:background="@drawable/chat_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a sample text where user does  blah blah"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_sender_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_sender_message_text"
        android:layout_toStartOf="@id/item_sender_message_status_image"
        android:text="10:20 am" />

    <ImageView
        android:id="@+id/item_sender_message_status_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/item_sender_message_text"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/icon_done"
        android:tint="@android:color/tertiary_text_dark" />
</RelativeLayout>